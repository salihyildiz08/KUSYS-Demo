@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutKUSYS.cshtml";
}

<section class="section">
    <div class="row">
        <div class="col-lg-8">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add courses for students.</h5>
                   
                        <div class="alert alert-primary alert-dismissible fade show" role="alert">
                        @if (ViewBag.courses != null && ViewBag.courses != "1")
                        {
                            foreach (var item in ViewBag.courses)
                            {
                                <p>@item -</p>
                            }   
                            <p>These courses already exist! </p>
                        }
                        @if (ViewBag.courses != "1")
                        {
                            <p>The courses you want to add have been added.</p>
                        }
                       
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                  
                   
                    <!-- General Form Elements -->
                    <form action="/StudentCourse/Create" method="post">
                        @await Component.InvokeAsync("AddSCStudentList")
                        @await Component.InvokeAsync("AddSCCourseList")
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>

                    </form><!-- End General Form Elements -->

                </div>
            </div>

        </div>


    </div>
</section>

